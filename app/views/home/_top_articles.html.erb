<%= link_to article_path(article) do %>
  <div class="top-article" style="background: url(<%= article.image %>); background-size: cover;">
    <div class="top-article-title-and-teaser">
      <h3 class="top-article-title">
        <%= article.title %>
      </h3>
      <div class="top-article-teaser">
        <%= article.teaser %>
      </div>
    </div>
  </div>
<% end %>
