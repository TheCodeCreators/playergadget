<div class="row">

  <div class="col-md-offset-3 col-md-6 text-center">
    <div class="form-group text-center">
      <%= link_to user_facebook_omniauth_authorize_path do %>
      <div class="btn-lg btn-block btn-social btn-facebook btn-custom2">
        <i class="fa fa-facebook-official fa-lg fa-fw"></i> Sign Up With Facebook
      </div>
      <% end %>
    </div>
    <div class="clearfix hr-or-divider">
      <hr class="pull-left">
      <span class="or-with-margin">OR</span>
      <hr class="pull-right">
    </div>

    <div class="form-group">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :username, class:"form-control", placeholder:"Username" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, class:"form-control", placeholder:"Email Address" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
        </div>

        <div class="form-group text-left">
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Password confirmation" %>
        </div>

        <div class="form-group">
          <%= f.check_box :allow_emails %>
          <%= f.label :allow_emails, 'Send me news and information' %>
        </div>

        <div class="form-group">
          <%= f.check_box :terms_of_service %>
          <%= f.label :terms_of_service, ("I agree to the #{link_to 'Terms of Service', terms_of_service_path, target: :_blank }").html_safe %>
        </div>

        <div class=form-group>
          <%= link_to "Privacy Policy", privacy_policy_path, target: :_blank %>
        </div>


        <div class="form-group">
          <%= f.submit "Sign Up", class:"btn btn-lg btn-block btn-custom" %>
        </div>

      <% end %>
    </div>

    <div class="sign-up">
      Already have an account?
      <a href="#" data-toggle="modal" data-target="#loginModal">Sign in!</a>
    </div>

  </div>

</div>
