<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
  <head>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      <title>PlayerGadget - from players to players</title>
    <% end %>
    <% if content_for?(:keywords) %>
      <%= yield(:keywords) %>
    <% else %>
      <meta name="keywords" content="games, hardware, fun, reviews, tips">
    <% end %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta property="fb:app_id" content="<%= ENV['FB_APP_ID'] %>" />
    <% if @article %>
      <meta property="og:title" content="<%= @article.title %>" />
      <meta property="og:url" content="<%= request.original_url %>" />
      <meta property="og:image" content="<%= @article.image.to_s %>" />
      <meta property="og:description" content="<%= @article.teaser %>" />
      <meta property="og:site_name" content="PlayerGadget" />
      <meta property="og:locale" content="en_GB" />
      <meta property="og:type" content="website" />
    <% end %>
  </head>

  <body>
    <div class="full-background">
    </div>
    <%= render 'layouts/navbar' %>
    <%= yield %>

    <% if display_ads? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-71281453-2', 'auto');
        ga('send', 'pageview');

      </script>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <% end %>
    <%= render 'layouts/footer' %>
    <%= render 'layouts/cookie_policy' %>
  </body>
</html>
