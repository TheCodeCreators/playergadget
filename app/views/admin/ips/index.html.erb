<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Ips
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to new_admin_ip_path, remote: true do %>
        <span class="btn darker-blue-btn pull-right with-20px-margin-top">
          New Ip
        </span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default admin-area-table-panel with-20px-margin-top">

        <div class="table-responsive">
          <table class="table text-center my-table">
           <!-- table headers -->
           <thead>
             <tr class="panel-heading">
               <th class="text-center">Id</th>
               <th class="text-center">Label</th>
               <th class="text-center">Address</th>
               <th class="text-center">Created at</th>
               <th class="text-center">Actions</th>
             </tr>
           </thead>
           <!-- ips information -->
           <tbody>
             <% @ips.each do |ip| %>
               <tr class="info-tr">
                 <td><%= link_to ip.id, edit_admin_ip_path(ip) %></td>
                 <td><%= ip.label %></td>
                 <td><%= ip.addr %></td>
                 <td><%= ip.created_at.strftime("%b %d, %Y %H:%M") %></td>
                 <td>
                   <%= link_to edit_admin_ip_path(ip), remote: true do %>
                     <button type="button" class="btn light-blue-btn">
                       <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                       Edit
                     </button>
                   <% end %>
                   <%= link_to admin_ip_path(ip), data: { confirm: 'Are you sure?' }, method: :delete do %>
                     <button type="button" class="btn light-orange-btn">
                       <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
                       Delete
                     </button>
                   <% end %>
                 </td>
               </tr>
             <% end %>
           </tbody>
          </table>
          <div class="apple_pagination">
            <%= will_paginate @ips %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade my-admin-area-modal" id="myModal" tabindex="-1" role="dialog">
</div>
