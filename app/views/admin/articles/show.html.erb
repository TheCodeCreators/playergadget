<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Articles
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to edit_admin_article_path do %>
        <span class="btn btn-success pull-right">
          Edit Article
        </span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= @article.title %> by <%= @article.user.name %> at <%= @article.created_at.strftime("%b %d, %Y %H:%M") %><br>
          <%= @article.published_at.present? ? @article.created_at.strftime("%b %d, %Y %H:%M") : "Draft" %><br>
        </div>
        <div class="panel-body">
          <div class="panel panel-default">
            <div class="panel-body article-intro">
              <%= raw @article.intro %><br>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body article-body">
              <%= raw @article.body %><br>
            </div>
          </div>
        <div>
      </div>
    </div>
  </div>
</div>
