<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Articles
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to new_admin_article_path do %>
        <span class="btn darker-blue-btn pull-right with-20px-margin-top">
          New Article
        </span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default admin-area-table-panel with-20px-margin-top">

        <div class="table-responsive">
          <table class="table text-center my-table">
           <!-- table headers -->
           <thead>
             <tr  class="panel-heading">
               <th class="text-center" colspan="2">Author</th>
               <th class="text-center">Title</th>
               <th class="text-center">Comments count</th>
               <th class="text-center">Tags</th>
               <th class="text-center">Published at</th>
               <th class="text-center">Actions</th>
             </tr>
           </thead>
           <!-- articles information -->
           <tbody>
             <% @articles.each do |article| %>
               <tr class="info-tr">
                 <td><%= design_avatar(article.user) %></td>
                 <td class="text-left"><%= article.user.current_name %></td>
                 <td><%= link_to article.title, admin_article_path(article) %></td>
                 <td class="article-intro"><%= article.comments_count %></td>
                 <td><%= raw get_object_tags(article) %></td>
                 <td>
                   <%= article.published_at.present? ? article.published_at.strftime("%b %d, %Y %H:%M") : "Draft" %>
                 </td>
                 <td>
                   <%= link_to admin_article_path(article) do %>
                     <button type="button" class="btn light-blue-btn">
                       <i class="fa fa-eye" aria-hidden="true"></i>
                       View
                     </button>
                   <% end %>
                   <%= link_to edit_admin_article_path(article) do %>
                     <button type="button" class="btn light-green-btn">
                       <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                       Edit
                     </button>
                   <% end %>
                 </td>
               </tr>
             <% end %>
           </tbody>
          </table>
        </div>

      </div>

    <div class="apple_pagination text-center">
      <%= will_paginate @articles %>
    </div>

    </div>
  </div>

</div>
