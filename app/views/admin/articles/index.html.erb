<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Articles
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to new_admin_article_path do %>
        <span class="btn darker-blue-btn pull-right with-20px-margin-top">
          New Article
        </span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default admin-area-table-panel with-20px-margin-top">

        <div class="table-responsive">
          <table class="table text-center my-table">
           <!-- table headers -->
           <thead>
             <tr  class="panel-heading">
               <th class="text-center" colspan="2">Author</th>
               <th class="text-center">Id</th>
               <th class="text-center">Title</th>
               <th class="text-center">Tags</th>
               <th class="text-center">Published at</th>
               <th class="text-center">Actions</th>
             </tr>
           </thead>
           <!-- articles information -->
           <tbody>
             <% @articles.each do |article| %>
               <%= render '/admin/shared/table_article', article: article %>
             <% end %>
           </tbody>
          </table>
        </div>

      </div>

    <div class="apple_pagination text-center">
      <%= will_paginate @articles %>
    </div>

    </div>
  </div>

</div>
