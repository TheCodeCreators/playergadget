<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Articles
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to new_admin_article_path do %>
        <span class="btn btn-success pull-right">
          New Article
        </span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive users-table">
            <table class="table table-striped">
             <!-- table headers -->
             <thead>
               <tr>
                 <th>Title</th>
                 <th>Intro</th>
                 <th>Created_at</th>
                 <th>Published_at</th>
                 <th>Author</th>
               </tr>
             </thead>
             <!-- companies information -->
             <tbody>
               <% @articles.each do |article| %>
                 <tr>
                   <td><%= link_to article.title, admin_article_path(article) %></td>
                   <td class="article-intro"><%= raw rouge_markdown(article.intro) %></td>
                   <td><%= article.created_at.strftime("%b %d, %Y %H:%M") %></td>
                   <td><%= article.published_at.present? ? article.created_at.strftime("%b %d, %Y %H:%M") : "Draft" %></td>
                   <td><%= article.user.name %></td>
                 </tr>
               <% end %>
             </tbody>
            </table>
            <div class="apple_pagination">
              <%= will_paginate @articles %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
