<%= form_for [:admin,  @article], html: {role: :form} do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:</h2>
        <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %> 
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :teaser %>
    <%= f.text_field :teaser, class:"form-control" %>
  </div>

  <%= render partial: 'image', locals: { f: f } %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="form-group">
        <% Article.tag_counts.each do |tag| %>
          <span>
            <b><%= tag.name %>:</b> <%= tag.taggings_count %> 
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :tag_list %><br />
        <%= f.text_field :tag_list, value: @article.tag_list.join(', '), class:"form-control input-sm" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :published_at %><br />
        <%= f.text_field :published_at, class:"form-control input-sm" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :intro %>
    <%= f.text_area :intro, class:"form-control", rows: "10" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.cktext_area :body, class:"form-control", id: 'article-body' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Article", :class=>'btn btn-lg btn-block btn-primary' %>
  </div>
<% end %>
