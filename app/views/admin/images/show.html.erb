<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Image <%= @image.id %>
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to edit_admin_image_path do %>
        <span class="btn btn-success pull-right">
          Edit Image
        </span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive users-table">
            <table class="table table-striped">
              <!-- table headers -->
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Address</th>
                  <th>Info</th>
                </tr>
              </thead>
              <!-- companies information -->
              <tbody>
                <tr>
                  <td><%= link_to @image.info, admin_image_path(@image) %></td>
                  <td><%= @image.file_url %></td>
                  <td>
                    <%= @image.created_at.strftime("%b %d, %Y %H:%M") %>
                    <%= @image.tag_list %>
                  </td>
                </tr>
              </tbody>
            </table>
            <%= image_tag @image.file_url, class: "image-fullscreen" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
