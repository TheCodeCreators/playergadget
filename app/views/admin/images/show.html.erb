<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Image <%= @image.id %>
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to edit_admin_image_path do %>
        <span class="btn darker-blue-btn pull-right with-20px-margin-top">
          Edit Image
        </span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default admin-area-table-panel with-20px-margin-top">

          <div class="table-responsive">
            <table class="table  text-center my-table">
              <!-- table headers -->
              <thead>
                <tr class="panel-heading">
                  <th class="text-center">Title</th>
                  <th class="text-center">Address</th>
                  <th class="text-center">Info</th>
                </tr>
              </thead>
              <!-- image information -->
              <tbody>
                <tr class="info-tr">
                  <td><%= @image.info %></td>
                  <td><%= @image.file_url %></td>
                  <td>
                    <%= @image.created_at.strftime("%b %d, %Y %H:%M") %>
                    <%= @image.tag_list %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="with-20px-margin-top text-center">
            <%= image_tag @image.file_url, class: "image-fullscreen" %>
          </div>

      </div>
    </div>
  </div>

</div>
