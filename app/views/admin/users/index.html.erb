<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3 class="users-page-title">
        Users
      </h3>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive users-table">
            <table class="table table-striped">
             <!-- table headers -->
             <thead>
               <tr>
                 <th>Current Name</th>
                 <th>Username</th>
                 <th>Name</th>
                 <th>Is admin?</th>
                 <th>Articles</th>
                 <th>Comments</th>
                 <th>Created_at</th>
               </tr>
             </thead>
             <!-- companies information -->
             <tbody>
               <% @users.each do |user| %>
                 <tr>
                   <td><%= user.current_name %></td>
                   <td><%= user.username %></td>
                   <td><%= user.name %></td>
                   <td><%= user.admin? %></td>
                   <td><%= user.articles.count %></td>
                   <td><%= user.comments.count %></td>
                   <td><%= user.created_at.strftime("%b %d, %Y %H:%M") %></td>
                 </tr>
               <% end %>
             </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
