<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3 class="users-page-title">
        Highlights
      </h3>
    </div>
    <div class="col-md-6">
      <%= link_to new_admin_highlight_path do %>
        <span class="btn btn-success pull-right">
          New Highlight
        </span>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive users-table">
            <table class="table table-striped">
             <!-- table headers -->
             <thead>
               <tr>
                 <th>Id</th>
                 <th>Position</th>
                 <th>State</th>
                 <th>Image</th>
                 <th>Article</th>
                 <th>Created_at</th>
                 <th>Actions</th>
               </tr>
             </thead>
             <!-- companies information -->
             <tbody>
               <% @highlights.each do |hl| %>
                 <tr>
                   <td><%= hl.id %></td>
                   <td><%= hl.position %></td>
                   <td><%= hl.state ? 'Active' : 'Inactive' %></td>
                   <td><%= hl.image_id %></td>
                   <td><%= hl.article_id %></td>
                   <td><%= hl.created_at.strftime("%b %d, %Y %H:%M") %></td>
                   <td><%= link_to 'X', admin_highlight_path(hl), data: { confirm: 'Are you sure?' }, method: :delete %></td>
                 </tr>
               <% end %>
             </tbody>
            </table>
            <div class="apple_pagination">
              <%= will_paginate @highlights %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
