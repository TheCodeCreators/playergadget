<% if notice.present? %>
<p class="alert alert-success text-center" id="flash">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true"  class="close">&times;</span>
    <span class="sr-only">Close</span>
  </button>
  <%= notice %>
</p>
<% end %>
<% if alert.present? %>
<p class="alert alert-danger text-center" id="flash">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true" class="close">&times;</span>
    <span class="sr-only">Close</span>
  </button>
  <%= alert %>
</p>
<% end %>
