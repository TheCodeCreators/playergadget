<tr class="info-tr">
  <td>
    <%= link_to admin_image_path(image) do %>
      <%= image_tag image.file_url, class: "image-preview" %>
    <% end %>
  </td>
  <td><%= link_to image.info, admin_image_path(image) %></td>
  <td><%= image.file_url %></td>
  <td><%= image.created_at.strftime("%b %d, %Y %H:%M") %></td>
  <td><%= raw get_object_tags(image) %></td>
  <td>
    <%= link_to admin_image_path(image) do %>
      <button type="button" class="btn btn-small light-blue-btn">
        <i class="fa fa-eye" aria-hidden="true"></i>
        View
      </button>
    <% end %>
    <%= link_to edit_admin_image_path(image) do %>
      <button type="button" class="btn btn-small light-green-btn">
        <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
        Edit
      </button>
    <% end %>
  </td>
</tr>
