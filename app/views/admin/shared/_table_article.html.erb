<tr class="info-tr">
  <td><%= design_avatar(article.user) %></td>
  <td class="text-left"><%= article.user.current_name %></td>
  <td>
    <span class="badge"><%= article.id %></span>
  </td>
  <td>
    <%= article.title %>
  </td>
  <td><%= raw get_object_tags(article) %></td>
  <td>
    <%= article.published_at.present? ? article.published_at.strftime("%b %d, %Y %H:%M") : "Draft" %>
  </td>
  <td>
    <%= link_to admin_article_path(article) do %>
      <button type="button" class="btn btn-small light-blue-btn tag-btn">
        <i class="fa fa-eye" aria-hidden="true"></i>
        View
      </button>
    <% end %>
    <%= link_to edit_admin_article_path(article) do %>
      <button type="button" class="btn btn-small light-green-btn">
        <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
        Edit
      </button>
    <% end %>
  </td>
</tr>
