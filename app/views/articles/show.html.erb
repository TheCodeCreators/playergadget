<%= content_for :keywords do %>
  <meta name="keywords" content="<%= @article.title.split(' ').join(", ") %>">
<% end %>
<%= content_for :title  do %>
  <title>PlayerGadget - <%= @article.title %></title>
<% end %>

<%= content_for :social_networks  do %>
  <meta property="og:title" content="<%= @article.title %>" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="<%= request.base_url + @article.image.to_s %>" />
  <meta property="og:description" content="<%= @article.teaser %>" />
  <meta property="og:site_name" content="PlayerGadget" />
  <meta property="og:locale" content="en_GB" />
  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@player_gadget" />
  <meta name="twitter:title" content="<%= @article.title %>" />
  <meta name="twitter:description" content="<%= @article.teaser %>" />
  <meta name="twitter:image" content="<%= request.base_url + @article.image_url %>" />
<% end %>

<div class="main-container container article with-padding-top">
  <div class="row top-articles">
    <div class="col-md-12">
      <%= render partial: 'home/top_articles', locals: { article: @article } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= render 'shared/responsive' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= render 'show_article' %>
    </div>

    <div class="col-md-4">
      <%= render 'shared/skyscrapper' %>

      <%= render 'side_articles' %>

      <%= render 'shared/lateral_footer' %>
    </div>
  </div>
</div>
