<div class="panel panel-default">
  <div class="panel-body">

    <article class="article-show">
      <div class="article-date">
        <%= @article.published_at.present? ? time_ago_in_words(@article.published_at) : 'draft' %> ago
      </div>
      <%= @article.body.html_safe %>
      <div class="social-buttons">
        <div data-turbolinks-no-cache class="fb-share-button" 
          data-href="<%= request.original_url %>" 
          data-layout="button">
          <i class="fa fa-facebook-square fa-3x fb-icon" data-toggle="tooltip" title="Share on Facebook" data-placement="left" aria-hidden="true"></i>
        </div>
        <div class="social-twitter">
          <a href="http://twitter.com/share" class="twitter-share-button" data-url="<%= article_url(@article) %>" data-text="<%= @article.title %> " data-count="horizontal" data-via="player_gadget">
            <i class="fa fa-twitter-square fa-3x twitter-icon" data-toggle="tooltip" title="Share on Twitter" data-placement="left" aria-hidden="true"></i>
          </a>
        </div>
      </div>
      <hr id="comments">
      <comments class="comments-section">
        <h4><%= pluralize(@article.comments_count, 'Comment') %>:</h4>

        <div class="row">
          <div class="col-md-12">
            <%= render(partial: 'comments/comment', collection: @comments) %>
          </div>
        </div>

        <div class="row with-less-margin-top">
          <div class="col-md-12">
            <div class="form-group">
              <% if current_user.nil? %>
                <div class="" data-toggle="modal" data-target="#loginModal">
                  <div class="row">
                    <div class="col-xs-1">
                      <i class="fa fa-comment" aria-hidden="true"></i>
                    </div>
                    <div class="col-xs-11">
                      <%= text_area_tag :body, nil, placeholder: "Write a comment...", class: 'form-control comments-input pull-left' %>
                    </div>
                  </div>
                </div>
              <% else %>
                <%= form_for [@article, Comment.new] do |f| %>
                  <div class="row">
                    <div class="col-xs-1">
                      <i class="fa fa-comment" aria-hidden="true"></i>
                    </div>
                    <div class="col-xs-11">
                      <%= f.text_area :body, placeholder: "Write a comment...", class: 'form-control comments-input pull-left' %>
                      <%= f.submit "Add Comment", class: "hidden" %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </comments>
    </article>
  </div>
</div>
