<div class="my-tabpanel with-margin-top">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#newest" aria-controls="newest" role="tab" data-toggle="tab">
      <h4>Newest articles</h4>
    </a></li>
    <li role="presentation"><a href="#popular" aria-controls="popular" role="tab" data-toggle="tab">
      <h4>Most popular articles</h4>
    </a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="newest">
      <ul class="list-group">
        <% Article.all.each do |article| %>
          <li class="list-group-item">
            <%= article.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div role="tabpanel" class="tab-pane" id="popular">
      <ul class="list-group">
        <% Article.all.each do |article| %>
          <li class="list-group-item">
            <%= article.title %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>