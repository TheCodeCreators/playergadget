<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= root_url %></loc>
    <lastmod><%= Article.published.order(created_at: :desc).first.updated_at.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1</priority>
  </url>
  <% @articles.each do |article| %>
    <url>
      <loc><%= article_url(article.slug) %></loc>
      <lastmod><%= article.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.9</priority>
    </url>
  <% end %>
  <% @tags.each do |tag| %>
    <url>
      <loc><%= tagged_path(tag.name) %></loc>
      <lastmod><%= Article.published.tagged_with(tag).order(updated_at: :desc).first.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>daily</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>
</urlset>
